{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "Get all articles, sorted by date desc, each with comment_count",
    "exampleResponse": {
      "articles": [
        {
          "author": "butter_bridge",
          "title": "Seafood substitutions are increasing",
          "article_id": 1,
          "topic": "cooking",
          "created_at": "2020-11-07T07:44:00.000Z",
          "votes": 0,
          "article_img_url": "https://example.com/img.png",
          "comment_count": 10
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves a single article object by its id",
    "parameters": {
      "path": {
        "article_id": "integer"
      }
    },
    "exampleResponse": {
      "article": {
        "author": "butter_bridge",
        "title": "Living in the shadow of a great man",
        "article_id": 1,
        "body": "I find this existence challenging",
        "topic": "coding",
        "created_at": "2020-11-07T07:44:00.000Z",
        "votes": 100,
        "article_img_url": "https://example.com/img.png"
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "Get all comments for the given article_id, newest first",
    "parameters": { "path": { "article_id": "integer" } },
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 1,
          "votes": 5,
          "created_at": "2021-01-18T10:00:00.000Z",
          "author": "butter_bridge",
          "body": "Great article!",
          "article_id": 1
          }
        ]
      }
    },
  "POST /api/articles/:article_id/comments": {
    "description": "adds a new comment to the given article",
    "exampleRequest": {
      "username": "butter_bridge",
      "body": "Great article!"
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 19,
        "body": "Great article!",
        "article_id": 1,
        "author": "butter_bridge",
        "votes": 0,
        "created_at": "2025-05-13T12:00:00.000Z"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates the vote count of an article",
    "exampleRequest": { "inc_votes": 1 },
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "votes": 101,
        "author": "butter_bridge",
        "title": "Votes counting",
        "topic": "mitch",
        "created_at": "2020-07-09T20:11:00.000Z",
        "article_img_url": "https://...",
        "body": "I find this patch challenging"
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes a comment by its id",
    "exampleResponse": "204 No Content"
  }
 
}
